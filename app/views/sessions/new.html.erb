<div class="sign-in-page">
    <%= image_tag  "sti-logo.jpg", class: 'sti-logo' %>
    <div class="sign-in-window">
        <%= form_tag sessions_path do %>
            <div class="avatar-container">
                <%= image_tag "avatar.png" %>
            </div>
            <div class="login-header">
                <h4>Login Here</h4>
            </div>
            <div class="error-header-container">
                <% if flash[:alert] %>
                    <h5 class="error-header"><%= flash[:alert] %></h5>
                <% end %>
            </div>
            <fieldset>
                <div class="form-row">
                    <%= text_field_tag :username, params[:username], placeholder: 'Username' %>
                </div>
                <div class="form-row">
                    <%= password_field_tag :password, nil, placeholder: 'Password' %>
                </div>
                <div class="form-row">
                    <%= submit_tag 'Submit' %>
                </div>
            </fieldset>
        <% end %>
        <div class="sign-up-link-container">
            <%= link_to 'Sign Up', new_users_path %>
        </div>
    </div>
    
</div>