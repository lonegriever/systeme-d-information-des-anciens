<div class="events-index">
    <%= render partial: 'common/navigation' %>
    <div class="events-header-image-container">
        <%= image_tag 'upcoming-events.png', class: 'events-header-image' %>
    </div>
    <div class="calendar-section">
        <div id="events-index-calendar"></div>
    </div>
    <form action="/events" id="search-event-form">
        <div class="search-events-section">
            <div class="search-event-input-container">
                <input type="text" class="search-event-input" name="event_name" placeholder="Enter event details here" 
                    id="search-event-input">
                <input type="hidden" name="page" value="1">
            </div>
            <div class="submit-button-container">
                <button type="submit">Search Event</button>
            </div>
        </div>
     </form>
     <%= render @events %>  
    <div class="pagination-links">
        <%= paginate @events %>
    </div> 
</div>